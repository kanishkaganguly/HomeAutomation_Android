<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MyActivity">

    <!-- FAN BUTTON-->
    <ImageButton
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/fan_btn"
        android:layout_marginTop="130dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fan_button"
        android:clickable="true" />

    <!-- LIGHT BUTTON-->
    <ImageButton
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/light_btn"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/light_button"
        android:clickable="true" />

    <!-- WIFI BUTTON-->
    <ImageButton
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="80dp"
        android:text="WiFi Control"
        android:id="@+id/wifi_btn"
        android:background="@android:color/transparent"
        android:src="@drawable/wifi_button"
        android:clickable="true" />

    <!-- EXIT BUTTON-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/exit_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- PASSWORD BUTTON-->
    <ImageButton
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Change Password"
        android:id="@+id/pass_change"
        android:layout_below="@+id/light_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:src="@drawable/pass_button"
        android:layout_marginTop="65dp" />

</RelativeLayout>
